<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrg3"
    tools:context="com.mussees.go.azzerrifi.gomusees.RechercheMuseeActivity">


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRegion"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/imageButton"
        android:minLines="1"
        android:maxLines="1"
        android:maxHeight="220dp"
        android:maxWidth="40dp"
        android:text="Nom de la rÃ©gion"
        android:autoText="false"
        android:textIsSelectable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@android:drawable/ic_search_category_default"
        android:minWidth="40dp"
        android:minHeight="30dp"
        android:layout_alignBottom="@+id/editTextRegion"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:onClick="picardy"
        android:layout_marginTop="50dp" />

</RelativeLayout>

