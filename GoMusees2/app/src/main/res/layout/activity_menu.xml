<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mussees.go.azzerrifi.gomusees.MenuActivity"
    android:background="#a4ffe3b0">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trouver une musée"
        android:id="@+id/button3"
        android:minHeight="60dp"
        android:minWidth="240dp"
        android:minLines="1"
        android:backgroundTint="#d3733e27"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:onClick="RchMusee" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Musées proche"
        android:id="@+id/button"
        android:minHeight="60dp"
        android:minWidth="240dp"
        android:minLines="1"
        android:backgroundTint="#d3733e27"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="20dp"
        android:onClick="museesProche" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button2"
        android:minHeight="60dp"
        android:minWidth="240dp"
        android:minLines="1"
        android:backgroundTint="#d3733e27"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button3"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button4"
        android:minHeight="60dp"
        android:minWidth="240dp"
        android:minLines="1"
        android:backgroundTint="#d3733e27"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button3"
        android:layout_marginTop="20dp" />
</RelativeLayout>
